
<!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add new Provider</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form) }}
                <div class="card-body">
                  <div class="form-group">
                    <label for="providername">Name</label>

                   {{ form_widget(form.name, {'attr': {'id':'providername','class': 'form-control','placeholder': 'Enter provider name'}}) }}
                  </div>

                  <div class="form-group">
                    <label for="provideremail">Email</label>
                    {{ form_widget(form.email, {'attr': {'id':'provideremail','class': 'form-control','placeholder': 'Enter provider email'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="provideradress">Adress</label>
                     {{ form_widget(form.adress, {'attr': {'id':'provideradress','class': 'form-control','placeholder': 'Enter provider adress'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputFile">Provider logo</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <!--input name="logo" type="file" class="custom-file-input" id="providerlogo"-->
                         {{ form_widget(form.logo, {'attr': {'id':'providerlogo','class': 'custom-file-input','placeholder': 'Enter provider logo','type':'file'}}) }}
                        <label class="custom-file-label" for="providerlogo">Choose file</label>
                      </div>
                      <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                      </div>
                    </div>
                  </div>
                  
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                   <button class="btn btn-success">{{ button_label|default('ADD') }}</button>
                </div>
               
               {{ form_end(form) }}
            </div>
            <!-- /.card -->

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
