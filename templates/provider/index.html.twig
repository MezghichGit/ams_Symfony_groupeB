{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Provider index{% endblock %}


  {% block menu %}
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="{{path('provider_list')}}" class="nav-link  active">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Provider List</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="{{path('provider_new')}}" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Provider Add</p>
                </a>
              </li>
            </ul>

            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="{{path('sendmail')}}" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Ecrire un message</p>
                </a>
              </li>
                   <li class="nav-item">
                <a href="{{path('cours')}}" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Conversion Devise</p>
                </a>
              </li>
            </ul>
            {% endblock %}

{% block body %}
{{parent()}} 

    <h1>Providers List</h1>

    <table class="table table-striped table-bordered" border="1" align="center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td>{{ provider.id }}</td>
                <td>{{ provider.name }}</td>
                <td>{{ provider.email }}</td>
                <td>{{ provider.adress }}</td>
                <td><img src="{{asset('uploads/providers/'~ provider.logo )}}" width="100" height="100"/></td>
                <td>
                    <a href="{{ path('provider_show', {'id': provider.id}) }}">show</a>
                    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('provider_ajout') }}" class="btn btn-primary">Create new</a>
{% endblock %}
